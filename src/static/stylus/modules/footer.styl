.footer-content
	display flex
	justify-content space-between
	padding 50px 0
	
	@media screen and (max-width smallDesktopWidth)
		flex-direction row
	
	@media screen and (max-width tabletWidth)
		flex-direction column

.footer-content-copyright
	display flex
	align-items flex-end
	
	@media screen and (max-width smallDesktopWidth)
		flex-direction column
		align-items center
	
.footer-content-copyright__img
	margin-right 20px
	
	@media screen and (max-width smallDesktopWidth)
		margin-bottom 15px
	
	@media screen and (max-width tabletWidth)
		margin-bottom 15px
	
.footer-content-copyright__text
	color: #2e435e
	font-weight 300
	line-height 30px
	
	@media screen and (max-width tabletWidth)
		margin-bottom 15px
	
	
.footer-content-menu
	display flex
	justify-content space-between
	align-items flex-end
	
	@media screen and (max-width tabletWidth)
		display block
		margin 0 auto

.footer-content-menu__list
	display flex
	justify-content space-between
	
	@media screen and (max-width tabletWidth)
		flex-direction column
		align-items center
	
.footer-content-menu__item
	margin-right 35px
	
	&:last-child
		margin-right 0
		
	@media screen and (max-width tabletWidth)
		margin-right 0
	
.footer-content-menu__link
	color #2e435e
	font-weight 700
	line-height 30.42px
	cursor pointer
	transition .4s all ease-in
	
	&:hover
		color #eb5238
		
	@media screen and (max-width tabletWidth)
		font-size rem(14)